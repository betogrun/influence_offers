<div class="text-center py-10">
  <% if player_signed_in? %>
    <h1 class="font-bold text-4xl mb-4">Welcome <%= current_player.name %>!</h1>
    <p class="text-lg">
      <a href="#" class="text-blue-500 hover:text-blue-600">Click here to check the offers available!</a>
    </p>
  <% else %>
    <h1 class="font-bold text-4xl mb-4">Welcome to Influence Offers!</h1>
    <p class="text-lg mb-4">
      Please <%= link_to 'log in', new_player_session_path, class: "text-blue-500 hover:text-blue-600" %> or 
      <%= link_to 'sign up', new_player_registration_path, class: "text-blue-500 hover:text-blue-600" %> to have access to the offers.
    </p>
  <% end %>
</div>
